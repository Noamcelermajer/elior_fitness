# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Environment
ENVIRONMENT=production

# Domain Configuration
DOMAIN=your-actual-domain.com
CORS_ORIGINS=https://your-actual-domain.com,https://www.your-actual-domain.com

# Security
# Generate a secure JWT secret: openssl rand -hex 32
JWT_SECRET=your-new-secure-jwt-secret-here-32-chars-minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
# Option A: SQLite (simpler, good for small to medium scale)
DATABASE_URL=sqlite:///./data/elior_fitness.db

# Option B: PostgreSQL (recommended for larger scale)
# DATABASE_URL=postgresql://elior_user:secure_password@postgres:5432/elior_fitness
# DB_USER=elior_user
# DB_PASSWORD=your_secure_database_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Performance Configuration
WORKERS=4
LOG_LEVEL=INFO 