# Railway Production Environment Variables
# Copy this to .env.production and set your values

# Railway automatically sets PORT, so we don't need to set it
# PORT=8000

# Environment
ENVIRONMENT=production
DOMAIN=eliorfitness-production.up.railway.app

# CORS Origins for Railway
CORS_ORIGINS=https://eliorfitness-production.up.railway.app,http://localhost:3000

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Database (Railway provides SQLite by default)
# If you want to use PostgreSQL, set up a Railway PostgreSQL service
# and use the DATABASE_URL from Railway

# Security
SECRET_KEY=your-super-secret-key-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File upload settings
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_DIR=uploads

# Performance settings
WORKERS=1
WORKER_CONNECTIONS=256 